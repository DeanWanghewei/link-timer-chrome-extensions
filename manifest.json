{
  "manifest_version": 3,
  "name": "Link Timer",
  "version": "1.0",
  "description": "一个可以定时提醒访问链接的Chrome扩展",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "contextMenus",
    "storage",
    "alarms",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Link Timer"
  },
  "options_page": "options.html"
}
